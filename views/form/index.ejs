<h1>Select Your Filters!</h1>

<form action='/filter/new' method="GET" >
  <label for="bloom-colour">Bloom Colour:</label>
    <select id="bloom-colour" name="bloom-colour">
      <option value=""></option>
      <option value="red">Red</option>
      <option value="purple">Purple</option>
      <option value="green">Green</option>
      <option value="white">White</option>
      <option value="yellow">Yellow</option>
      <option value="pink">Pink</option>
      <option value="pale-pink">Pale Pink</option>
      <option value="orange">Orange</option>
      <option value="black">Black</option>
      <option value="blue">Blue</option>
      <option value="multiple-colours">Multiple Colours</option>
    </select>
  <br>  
  <label for="humidity">Humidity:</label>
    <select id="humidity" name="humidity">
      <option value=""></option>
      <option value="low">Low</option>
      <option value="moderate">Moderate</option>
      <option value="high">High</option>
      <option value="low-to-moderate">Low to Moderate</option>
      <option value="moderate-to-high">Moderate to High</option>
      <option value="unknown">Unknown</option>
    </select>
  <br>  
  <label for="indoor-flowering">Indoor Flowering:</label>
    <select id="indoor-flowering" name="indoor-flowering">
      <option value=""></option>
      <option value="yes">Yes</option>
      <option value="no">No</option>
      <option value="rarely">Rarely</option>
      <option value="n/a">N/A</option>
    </select>
  <br>  
  <label for="moisture">Moisture:</label>
    <select id="moisture" name="moisture">
      <option value=""></option>
      <option value="low">Low</option>
      <option value="medium">Medium</option>
      <option value="high">High</option>
      <option value="low-to-medium">Low to Medium</option>
      <option value="medium-to-high">Medium to High</option>
    </select>
  <br>  
  <label for="hanging">Hanging:</label>
    <select id="hanging" name="hanging">
      <option value=""></option>
      <option value="yes">Yes</option>
      <option value="no">No</option>
    </select>
  <br>  
  <input type="submit" value="Submit">
</form>